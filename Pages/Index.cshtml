@page
@using HexStrategyInRazor.Generator
@model IndexModel
@{
	ViewData["Title"] = "Home page";
}

<section cite="hexMap">
	@for (int i = 0; i < Model.newMap.Rows.Count; i++)
	{
		var row = Model.newMap.Rows[i];
		<article class="hexLine">
			@for (int j = 0; j < row.Cells.Count(); j++)
			{
				var cell = row.Cells[j];
				<div class="hexBlock @(cell.ID + "hexBlock")" id="@(cell.ID + "hexBlock")">
					<style>
						@("." + @cell.ID)
						{
							color: @cell.CellColorHTML;
						}
						@("." + cell.ID + "hexBlock")
						{
							background-image: url("../images/grid.svg");
						}
					</style>
					<div class="unselectable hexagon2 @cell.ID" id="@cell.ID" 
					onclick="" 
					onmousedown = "currentTileId = @cell.ID">
						U:@cell.UnitsCount<br />
						C:@cell.ControllerName <br />
					</div>
				</div>
			}
		</article>
	}
</section>